# Config file aliases
alias zshrc='${=EDITOR} ~/.zshrc' # Quick access to zsh config
alias termconf='${=EDITOR} ~/.config/alacritty/alacritty.yml' # Quick acces terminal config
alias polyconf='${=EDITOR} ~/.config/polybar/config' # Quick acces to polybar config
alias aliasrc='${=EDITOR} ~/.aliasrc' # Quick acces to alias config
alias dxhdrc='${=EDITOR} ~/.config/dxhd/dxhd.sh' # Quick acces to sxhkd config
alias bspwmrc='${=EDITOR} ~/.config/bspwm/bspwmrc' # Quick acces to bspwm config
alias zshenv='${=EDITOR} ~/.zshenv' # Quick acces to zsh enviroment settings
alias nvimrc='${=EDITOR} ~/.config/nvim/init.vim' # Quick acces to nvim config
alias picomconf='${=EDITOR} ~/.config/picom/picom.conf'
alias lfrc='${=EDITOR} ~/.config/lf/lfrc'
alias sxhkdrc='${=EDITOR} ~/.config/sxhkd/sxhkdrc'

# Program alias
alias netris='ssh netris.rocketnine.space'
alias grep='grep --color=auto'
alias vi='nvim'
alias ls='exa -al --color=always --group-directories-first' # my preferred listing
alias la='exa -a --color=always --group-directories-first'  # all files and dirs
# alias ll='exa -l --color=always --group-directories-first'  # long format
alias lt='exa -aT --color=always --group-directories-first' # tree listing
alias cat='bat'
alias find='fd'
alias df='df -h -x devtmpfs -x tmpfs -x usbfs -x loop'                          # human-readable sizes
alias free='free -m'                      # show sizes in MB
alias ps='procs'
alias ryzenadj-normal='/usr/bin/sudo ryzenadj --slow-time=30 --vrmmax-current=30000 --max-gfxclk=900 --max-fclk-frequency=1200 --tctl-temp=60 --stapm-limit=10000 --stapm-time=300 --fast-limit=12000 --slow-limit=11000'
alias ryzenadj-fluff='/usr/bin/sudo ryzenadj --slow-time=30 --vrmmax-current=30000 --max-gfxclk=550 --max-fclk-frequency=1200 --tctl-temp=70 --stapm-limit=5000 --stapm-time=150 --fast-limit=7000 --slow-limit=6000'
alias ryzenadj-light-gaming='/usr/bin/sudo ryzenadj --slow-time=30 --vrmmax-current=35000 --max-gfxclk=900 --max-fclk-frequency=1200 --tctl-temp=65 --stapm-limit=10000 --stapm-time=300 --fast-limit=12000 --slow-limit=11000'
alias ryzenadj-heavy-gaming='/usr/bin/sudo ryzenadj --slow-time=60 --vrmmax-current=60000 --max-gfxclk=900 --max-fclk-frequency=1200 --tctl-temp=70 --stapm-limit=20000 --stapm-time=1000 --fast-limit=25000 --slow-limit=21000'
alias ryzenadj-super-heavy-programs='/usr/bin/sudo ryzenadj --slow-time=60 --vrmmax-current=60000 --max-gfxclk=900 --max-fclk-frequency=1200 --tctl-temp=75 --stapm-limit=25000 --stapm-time=1000 --fast-limit=30000 --slow-limit=27000'
alias zathura='zathura --mode fullscreen'

# Function aliases
alias yta='youtube-dl -x -f bestaudio --external-downloader aria2c --external-downloader-args "-j 16 -s 16 -x 16 -k 5M" --audio-format vorbis -o "%(title)s.%(ext)s"'
alias ytvb='youtube-dl --merge-output-format mp4 -f "bestvideo+bestaudio[ext=m4a]/best" --embed-thumbnail --external-downloader aria2c --external-downloader-args "-j 16 -s 16 -x 16 -k 5M" --add-metadata -o "%(title)s.%(ext)s"'
alias ytvf='youtube-dl --merge-output-format mp4 --format best --embed-thumbnail --external-downloader aria2c --external-downloader-args "-j 16 -s 16 -x 16 -k 5M" --add-metadata -o "%(title)s.%(ext)s"'
alias dot='cd $HOME/Repos/Dotfiles'
alias clear='clear; nerdfetch'

# termbin
alias tb="nc termbin.com 9999"

# kwin control
alias kwin-stop="qdbus org.kde.KWin /Compositor suspend"
alias kwin-start="qdbus org.kde.KWin /Compositor resume"
