#!/bin/dash
# change it to #!/bin/sh if you are on debian based distro

rootsize=$(df -hT / | grep 'sda2' | awk '{print $3}' | sed 's/G//')
rootused=$(df -hT / | grep 'sda2' | awk '{print $4}' | sed 's/G//')

homesize=$(df -hT /home | grep 'sda3' | awk '{print $3}' | sed 's/G//')
homeused=$(df -hT /home | grep 'sda3' | awk '{print $4}' | sed 's/G//')

echo  "ïŸ‰:/=$rootused/$rootsize GB|/home=$homeused/$homesize GB"
