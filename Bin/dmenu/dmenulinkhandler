#!/bin/sh

# Feed this script a link and it will give dmenu
# some choice programs to use to open it.

case "$(printf "copy url\\nmpv\\nmpv (loop)\\nqueue download\\nqueue youtube-dl\\nsxiv\\nbrowser\\nw3m" | dmenu -p "Open link with what program?")" in
	"copy url") echo "$1" | xclip -selection clipboard ;;
	mpv) mpv -quiet "$1" ;;
	"mpv (loop)") mpv -quiet --loop "$1" ;;
	"queue download") tsp curl -LO "$1" ;;
	"queue youtube-dl") tsp youtube-dl --write-metadata -ic "$1";;
	browser) "$BROWSER" "$1" > /dev/null;;
	sxiv)  sxiv "$1";;
	w3m) w3m "$1";;
esac
