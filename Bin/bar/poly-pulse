#!/bin/sh

vol=$(pamixer --get-volume)
mute=$(pamixer --get-volume-human)

if [ "$(echo "$vol" | tr -d "%")" -gt 70 ]; then
    icon=$(echo "墳")
elif [ "$(echo "$vol" | tr -d "%")" -gt 35 ]; then
    icon=$(echo "奔")
else
    icon=$(echo "奄")
fi

if [ "$mute" = "muted" ]; then
    label=$(echo mute)
else
    label=$vol%
fi

echo $icon $label
