# Edit by CroLinuxGamer

# Color section (i know that i only have 3
# colors but that is enough for me)
[colors]
bg = #d01e282d
fg = #d0c4c7d1
rd = #eb606b

# Bar settings
[bar/top]
width = 100%
height = 16
radius = 6.0
fixed-center = false
enable-ipc=true
border-size=5

background = ${colors.bg}
foreground = ${colors.fg}

line-size = 1
line-color = ${colors.bg}

padding-left = 0
padding-right = 0

module-margin-left = 0
module-margin-right = 1

font-0 = JetBrainsMonoMedium:antialias=true:pixelsize=8;2
font-1 = HackNerdFont:antialias=true:pixelsize=8;2
font-2 = IPAGothic:antialias=true:pixelsize=8;2

modules-left = bspwm title
modules-center = 
modules-right = arch-updates filesystem cpu ram xkeyboard

tray-position = right
tray-padding = 1
tray-maxsize = 10

wm-restack = bspwm
override-redirect = true

[bar/bottom]
width = 100%
height = 16
radius = 6.0
fixed-center = true
enable-ipc=true
border-size = 5
bottom=true

background = ${colors.bg}
foreground = ${colors.fg}

line-size = 1
line-color = ${colors.bg}

padding-left = 0
padding-right = 1

module-margin-left = 0
module-margin-right = 1

font-0 = JetBrainsMonoMedium:antialias=true:pixelsize=8;2
font-1 = HackNerdFont:antialias=true:pixelsize=8;2

modules-left = menu
modules-center = mpd-song mpd-prev mpd-status mpd-next
modules-right = volume network backlight battery date power

wm-restack = bspwm
override-redirect = true

[module/arch-updates]
type = custom/script
exec = arch-updates
interval = 600
format-underline = ${colors.fg}

[module/xkeyboard]
type = internal/xkeyboard
format = <label-layout><label-indicator>
format-underline = ${colors.fg}
label-layout = %layout%
label-indicator-on-capslock = " CAPS"
label-indicator-off-capslock = 
label-indicator-on-numlock = " NUM"
label-indicator-off-numlock = 

[module/title]
type = internal/xwindow
label = %title:0:25:...%
format = <label>
format-foreground = ${colors.fg}
format-padding = 1

[module/mpd-song]
type=custom/script
exec= mpc current
interval = 1
format-prefix=" "
click-left = $TERMINAL -e ncmpcpp

[module/mpd-status]
type=custom/ipc
hook-0= mpc-status
initial = 1
click-left = mpc toggle && polybar-msg hook mpd-status 1

[module/mpd-prev]
type=custom/text
content="玲"
click-left= mpc prev

[module/mpd-next]
type=custom/text
content="怜"
click-left= mpc next

[module/menu]
type=custom/text
content=""
content-padding=1
click-left= rofi -modi drun -show drun -show-icons -location 7 -yoffset -26 -xoffset 5 -lines 15 -width 25 -display-drun "" -font "hack 10"

[module/power]
type=custom/text
content=""
content-padding=1
click-left= rofi -show power-menu -modi power-menu:power-menu -show-icons -font "hack 10" -lines 2 -width 11 -location 5 -xoffset -5 -yoffset -26

[module/network]
type = internal/network
interface = wlp2s0
interval = 10
format-connected = <label-connected>
label-connected = "%{A1:$TERMINAL -e nmtui:}直  %{A}"
label-connected-underline = ${colors.fg}

label-disconnected = "%{A1:$TERMINAL -e nmtui:}睊  %{A}"
label-disconnected-underline = ${colors.fg}

[module/backlight]
type = custom/ipc
hook-0 = "light -G | sed 's/\.[0-9]*//'"
format-prefix = " "
format-underline = ${colors.fg}
initial = 1
click-left = xfce4-power-manager-settings

[module/volume]
type = custom/ipc
hook-0 = pamixer --get-volume-human
click-left = $TERMINAL -e pulsemixer &
initial = 1
format-prefix = " "
format-underline = ${colors.fg}

[module/battery]
type = custom/script
exec = bspbatt
label = "%output%"
click-left = xfce4-power-manager-settings
interval = 30
format-underline = ${colors.fg}

[module/date]
type = custom/script
exec = date '+%d.%m.%Y %H:%M'
label = "%output%"
interval = 10
format-underline = ${colors.fg}

[module/ram]
type = internal/memory
interval = 10
format = <label>
format-underline = ${colors.fg}
label =  %gb_used%/%gb_total%

[module/filesystem]
type = internal/fs
format-mounted = <label-mounted>
format-mounted-underline = ${colors.fg}
label-mounted =  : %used%/%total%
mount-0 = /
interval = 300
fixed-values = true
spacing = 1

[module/cpu]
type = internal/cpu
interval = 10
format = <label> <ramp-coreload>
format-prefix = " "
format-underline = ${colors.fg}
label = %percentage%%
ramp-coreload-spacing = 1
ramp-coreload-0 = ▁
ramp-coreload-1 = ▂
ramp-coreload-2 = ▃
ramp-coreload-3 = ▄
ramp-coreload-4 = ▅
ramp-coreload-5 = ▆
ramp-coreload-6 = ▇
ramp-coreload-7 = █

[module/bspwm]
type = internal/bspwm

label-focused = %index%
label-focused-background = ${colors.bg}
label-focused-underline= ${colors.fg}
label-focused-padding = 1

label-occupied = %index%
label-occupied-padding = 1

label-urgent = %index%!
label-urgent-background = ${colors.rd}
label-urgent-padding = 1

label-empty =
label-empty-padding = 0


[settings]
screenchange-reload = true

[global/wm]
margin-top = 5
margin-bottom = 5
