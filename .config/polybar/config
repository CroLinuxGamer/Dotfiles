# Edit by CroLinuxGamer

# Color section (i know that i only have 3
# colors but that is enough for me)
[colors]
bg = #d01e282d
fg = #d0c4c7d1
rd = #eb606b

# Bar settings
[bar/top]
width = 100%
height = 16
radius = 6.0
fixed-center = true
enable-ipc=true
border-size=5

background = ${colors.bg}
foreground = ${colors.fg}

line-size = 1
line-color = ${colors.bg}

padding-left = 0
padding-right = 1

module-margin-left = 0
module-margin-right = 1

font-0 = JetBrainsMonoMedium:antialias=true:pixelsize=8;2
font-1 = HackNerdFont:antialias=true:pixelsize=8;2
font-2 = IPAGothic:antialias=true:pixelsize=8;2

modules-left = bspwm title
modules-center = mpd-song mpd-prev mpd-status mpd-next
modules-right = cpu ram

tray-position = right
tray-padding = 1
tray-maxsize = 10

wm-restack = bspwm
override-redirect = true

[bar/bottom]
width = 100%
height = 16
radius = 6.0
fixed-center = true
enable-ipc=true
border-size = 5
bottom=true

background = ${colors.bg}
foreground = ${colors.fg}

line-size = 1
line-color = ${colors.bg}

padding-left = 0
padding-right = 1

module-margin-left = 0
module-margin-right = 1

font-0 = JetBrainsMonoMedium:antialias=true:pixelsize=8;2
font-1 = HackNerdFont:antialias=true:pixelsize=8;2

modules-left = menu
modules-center =
modules-right = volume network backlight battery date power

wm-restack = bspwm
override-redirect = true

[module/title]
type = internal/xwindow
label = %title:0:25:...%
format = <label>
format-foreground = ${colors.fg}
format-padding = 1

[module/mpd-song]
type=custom/script
exec= mpc current
interval = 1
format-prefix="Ô¢Ü "
click-left = $TERMINAL -e ncmpcpp

[module/mpd-status]
type=custom/ipc
hook-0= mpc-status
initial = 1
click-left = mpc toggle && polybar-msg hook mpd-status 1

[module/mpd-prev]
type=custom/text
content="Ô¶≠"
click-left= mpc prev

[module/mpd-next]
type=custom/text
content="Ô¶¨"
click-left= mpc next

[module/menu]
type=custom/text
content="Ô°õ"
content-padding=1
click-left= rofi -modi drun -show drun -show-icons -location 7 -yoffset -26 -xoffset 5 -lines 15 -width 25 -display-drun "" -font "hack 10"

[module/power]
type=custom/text
content="ÔÄë"
content-padding=1
click-left= rofi -show power-menu -modi power-menu:power-menu -show-icons -font "hack 10" -lines 2 -width 11 -location 5 -xoffset -5 -yoffset -26

[module/network]
type = internal/network
interface = wlp2s0
interval = 10
format-connected = <label-connected>
label-connected = "%{A1:$TERMINAL -e nmtui:}Ô™® ÔÄå %{A}"
label-connected-underline = ${colors.fg}

label-disconnected = "%{A1:$TERMINAL -e nmtui:}Ô™© ÔÄç %{A}"
label-disconnected-underline = ${colors.fg}

[module/backlight]
type = custom/ipc
hook-0 = "light -G | sed 's/\.[0-9]*//'"
format-prefix = "Ôóú "
format-underline = ${colors.fg}
initial = 1
click-left = xfce4-power-manager-settings

[module/volume]
type = custom/ipc
hook-0 = pamixer --get-volume-human
click-left = $TERMINAL -e pulsemixer &
initial = 1
format-prefix = "ÔÄß "
format-underline = ${colors.fg}

[module/battery]
type = custom/script
exec = bspbatt
label = "%output%"
click-left = xfce4-power-manager-settings
interval = 30
format-underline = ${colors.fg}

[module/date]
type = custom/script
exec = date '+%d.%m.%Y %H:%M'
label = "%output%"
interval = 10
format-underline = ${colors.fg}

[module/ram]
type = custom/script
exec = i3memory
label = "%output%"
click-left = $TERMINAL -e htop &
interval = 10
format-prefix = "üß† "

[module/cpu]
type = internal/cpu
interval = 10
format = <label> <ramp-coreload>
format-prefix = "ÔÑâ "
format-underline = ${colors.fg}
label = %percentage%%
ramp-coreload-spacing = 1
ramp-coreload-0 = ‚ñÅ
ramp-coreload-1 = ‚ñÇ
ramp-coreload-2 = ‚ñÉ
ramp-coreload-3 = ‚ñÑ
ramp-coreload-4 = ‚ñÖ
ramp-coreload-5 = ‚ñÜ
ramp-coreload-6 = ‚ñá
ramp-coreload-7 = ‚ñà

[module/bspwm]
type = internal/bspwm

label-focused = %index%
label-focused-background = ${colors.bg}
label-focused-underline= ${colors.fg}
label-focused-padding = 1

label-occupied = %index%
label-occupied-padding = 1

label-urgent = %index%!
label-urgent-background = ${colors.rd}
label-urgent-padding = 1

label-empty =
label-empty-padding = 0


[settings]
screenchange-reload = true

[global/wm]
margin-top = 5
margin-bottom = 5
