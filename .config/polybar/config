# Edit by CroLinuxGamer

# Color section (i know that i only have 3
# colors but that is enough for me)
[colors]
bg = #d01e282d
fg = #d0c4c7d1
rd = #eb606b

# Bar settings
[bar/top]
width = 100%
height = 16
radius = 8.0
fixed-center = true
enable-ipc=true
border-size=5

background = ${colors.bg}
foreground = ${colors.fg}

line-size = 1
line-color = ${colors.bg}

padding-left = 0
padding-right = 1

module-margin-left = 0
module-margin-right = 1

font-0 = JetBrainsMonoMedium:antialias=true:pixelsize=8;2
font-1 = HackNerdFont:antialias=true:pixelsize=8;2
font-2 = IPAGothic:antialias=true:pixelsize=8;2

modules-left = menu bspwm
modules-center = mpd-song mpd-prev mpd-status mpd-next
modules-right = volume network backlight battery date power

tray-position = right
tray-padding = 1
tray-maxsize = 10

wm-restack = bspwm
override-redirect = true

[module/mpd-song]
type=custom/script
exec= mpc current
interval = 1
format-prefix=" "
click-left = $TERMINAL -e ncmpcpp

[module/mpd-status]
type=custom/ipc
hook-0= mpc-status
initial = 1
click-left = mpc toggle && polybar-msg hook mpd-status 1

[module/mpd-prev]
type=custom/text
content="玲"
click-left= mpc prev

[module/mpd-next]
type=custom/text
content="怜"
click-left= mpc next

[module/menu]
type=custom/text
content=""
content-padding=1
click-left= rofi -modi drun -show drun -show-icons -location 1 -yoffset 26 -xoffset 5 -lines 15 -width 25 -display-drun "" -font "hack 10"

[module/power]
type=custom/text
content=""
content-padding=1
click-left= rofi -show power-menu -modi power-menu:power-menu -show-icons -font "hack 10" -lines 2 -width 11 -location 3 -xoffset -5 -yoffset 26

[module/network]
type = internal/network
interface = wlp2s0
interval = 10
format-connected = <label-connected>
label-connected = "%{A1:$TERMINAL -e nmtui:}直  %{A}"
label-connected-underline = ${colors.fg}

label-disconnected = "%{A1:$TERMINAL -e nmtui:}睊  %{A}"
label-disconnected-underline = ${colors.fg}

[module/backlight]
type = custom/ipc
hook-0 = "light -G | sed 's/\.[0-9]*//'"
format-prefix = " "
format-underline = ${colors.fg}
initial = 1
click-left = xfce4-power-manager-settings

[module/volume]
type = custom/ipc
hook-0 = pamixer --get-volume-human
click-left = $TERMINAL -e pulsemixer &
initial = 1
format-prefix = " "
format-underline = ${colors.fg}

[module/battery]
type = custom/script
exec = bspbatt
label = "%output%"
click-left = xfce4-power-manager-settings
interval = 30
format-underline = ${colors.fg}

[module/date]
type = custom/script
exec = date '+%H:%M'
label = "%output%"
interval = 10
format-underline = ${colors.fg}

[module/bspwm]
type = internal/bspwm

label-focused = %index%
label-focused-background = ${colors.bg}
label-focused-underline= ${colors.fg}
label-focused-padding = 1

label-occupied = %index%
label-occupied-padding = 1

label-urgent = %index%!
label-urgent-background = ${colors.rd}
label-urgent-padding = 1

label-empty =
label-empty-padding = 0


[settings]
screenchange-reload = true

[global/wm]
margin-top = 5
margin-bottom = 5
